# =============================================================================
# RL Portfolio Manager - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# -----------------------------------------------------------------------------
# Alpaca Trading API (for paper/live trading)
# -----------------------------------------------------------------------------
ALPACA_API_KEY=your_api_key_here
ALPACA_SECRET_KEY=your_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# -----------------------------------------------------------------------------
# Sentiment API (optional - for live sentiment integration)
# -----------------------------------------------------------------------------
# URL to your financial-sentiment-transformers deployment
# SENTIMENT_API_URL=https://your-hf-space.hf.space/api/predict

# -----------------------------------------------------------------------------
# Model Configuration
# -----------------------------------------------------------------------------
MODEL_VERSION=v1_baseline
INCLUDE_SENTIMENT=false

# -----------------------------------------------------------------------------
# Heroku Deployment (set via heroku config:set)
# -----------------------------------------------------------------------------
# These are typically set directly on Heroku, not in .env
# DYNO=worker
# PORT=8501
